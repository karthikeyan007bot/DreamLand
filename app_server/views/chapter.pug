extends layout
block link 
 link(rel="stylesheet", href="/stylesheets/chapter.css")
block content
  .text-center.chapter-wrap  
     .chapter_header.my-1 
        h5.chapter_title #{chapter.title}
        .chapter_user
          .card.user_card
             .card-body.text-center
                 img.user_pic(src=`https://drive.google.com/uc?export=view&id=${fantom_user.prflimg}`)
                 .vstack.user_info.my-1 
                   a(href="/profile").user_name.my-1 #{fantom_user.name}
                   a(href="/profile").user_id @#{fantom_user.userId}
                 .user_follows.d-flex.justify-content-between.my-1   
                    button(type='button').btn.btn-primary Profile
                    button(type="button").btn.btn-primary  Follow
        hr
        .chapter_infos
                  button.btn.btn-light.mx-1(type='button' data-bs-toggle = 'tooltip' data-bs-title='Share') 
                    i.fa-solid.fa-share-nodes 
                  button.btn.btn-light.mx-1(type='button' data-bs-toggle = 'tooltip' data-bs-title='Report') 
                    i.fa-solid.fa-flag 
                  button.btn.btn-light.mx-1(type='button' data-bs-toggle = 'tooltip' data-bs-title='Bookmark') 
                    i.fa-solid.fa-bookmark
                  button.btn.btn-light.mx-1(type='button' data-bs-toggle ='modal' data-bs-target='#reactionModal') 
                    i.fa-solid.fa-face-smile
                  button.btn.btn-light.mx-1(type='button') 
                    i.lapdisp.fa-solid.fa-reply  
        hr                     
     .chapter_body.mb-5.mt-2 !{chapter.chapter}           
     .chapter_footer
       .user_card.card 
         .card-body.hstack
            img(src=`https://drive.google.com/uc?export=view&id=${fantom_user.prflimg}`, alt="", srcset="").usr_pic
            .vstack 
              .usr_name #{fantom_user.name}
              .usr_id @#{fantom_user.userId}
            button(type="button").btn.btn-light.me-1 Follow
            button(type="button").btn.btn-light 
              i.fa-solid.fa-message 